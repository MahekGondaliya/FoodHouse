<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.activities.Notification_Manager">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Header Title -->
            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Notification"
                android:textColor="@color/endcolorgradient"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/usernameContainer"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:boxStrokeColor="?attr/colorOnBackground"
                app:hintTextColor="@color/endcolorgradient"
                app:layout_constraintTop_toBottomOf="@id/textView22"
                app:startIconTint="@color/endcolorgradient">

                <EditText

                    android:id="@+id/edtTital"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tital"
                    android:inputType="text"
                    android:textColor="@color/endcolorgradient"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phoneContainer"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:boxStrokeColor="?attr/colorOnBackground"
                app:hintTextColor="@color/endcolorgradient"
                app:layout_constraintTop_toBottomOf="@id/usernameContainer"
                app:startIconTint="@color/endcolorgradient">

                <EditText
                    android:id="@+id/edtSubTital"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Sub Tital"
                    android:inputType="text"
                    android:textColor="@color/endcolorgradient"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:boxStrokeColor="?attr/colorOnBackground"
                app:hintTextColor="@color/endcolorgradient"
                app:layout_constraintTop_toBottomOf="@id/phoneContainer"
                app:startIconTint="@color/endcolorgradient">

                <EditText
                    android:id="@+id/edtDescripation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Descripation"
                    android:inputType="textLongMessage"
                    android:textColor="@color/endcolorgradient"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>




            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSend"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="32dp"
                android:elevation="4dp"
                android:text="Send"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@color/endcolorgradient"
                app:cornerRadius="24dp"
                app:iconGravity="start"
                app:iconPadding="8dp"
                app:iconTint="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/email" />

            <!-- Cancel Text -->
            <TextView
                android:id="@+id/txtBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="32dp"
                android:background="?selectableItemBackgroundBorderless"
                android:padding="12dp"
                android:text="Cancel Changes"
                android:textColor="@color/endcolorgradient"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnSend" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

